<div class="container__centered">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, html: { class: "form form--auth" }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  class: 'form__input',
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  class: 'form__input',
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn--primary' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>

  <div class="test-accounts-table">
    <p>Test account:</p>
    <table>
      <thead>
        <tr>
          <td>Email</td>
          <td>Password</td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>accountant@kpmg.com</td>
          <td>password</td>
        </tr>
      </tbody>
    </table>
  </div>

</div>