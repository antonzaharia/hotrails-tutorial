<main class="container">
  <p class="note">This single-page quote editor was build with Turbo and... a single line of custom JavaScript for the flash message animation.</p>
  <div class="header">
    <h1>Quotes</h1>
    <%= link_to "New quote", new_quote_path, data: { turbo_frame: dom_id(Quote.new) }, class: "btn btn--primary" %>
  </div>

  <%= turbo_frame_tag dom_id(Quote.new) %>

  <%= turbo_stream_from current_company, "quotes" %>

  <%= turbo_frame_tag "quotes" do %>
    <%= render "quotes/empty_state" %>
    <%= render @quotes %>
  <% end %>
</main>